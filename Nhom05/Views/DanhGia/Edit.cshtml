@model Nhom05.Models.DanhGia

@{
    ViewData["Title"] = "Edit";
}


<div class="row ">
    <div class="col-md-4 w3-card-4 w3-round">
            <h3 class="w3-container w3-blue w3-round w3-padding-16 w3-center">Sửa đánh giá</h3>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IDDanhGia" />
            <div class="form-group">
                <label asp-for="TenKhachHang" class="control-label"></label>
                <input asp-for="TenKhachHang" class="form-control" />
                <span asp-validation-for="TenKhachHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoiDung" class="control-label"></label>
                <input asp-for="NoiDung" class="form-control" />
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDSanPham" class="control-label"></label>
                <select asp-for="IDSanPham" class="form-control" asp-items="ViewBag.IDSanPham"></select>
                <span asp-validation-for="IDSanPham" class="text-danger"></span>
            </div>
             <div class="form-group abc">
                <input type="submit" value="Save" class="btn btn-primary w3-margin" />
              <a asp-action="Index" class=" btn btn-primary w3-margin w3-button w3-khaki w3-round w3-margin-bottom">Đánh giá của bạn</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
