@model Nhom05.Models.DanhGia

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
    <div class="col-md-4 w3-card-4">
           <h2 class="w3-container w3-green w3-margin w3-round w3-padding w3-center">Đánh giá của bạn</h2>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenKhachHang" class="control-label">Họ và Tên</label>
                <input asp-for="TenKhachHang" class="form-control" />
                <span asp-validation-for="TenKhachHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoiDung" class="control-label"> Nội Dung</label>
                <input asp-for="NoiDung" class="form-control" />
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDSanPham" class="control-label">Sản Phẩm</label>
                <select asp-for="IDSanPham" class ="form-control" asp-items="ViewBag.IDSanPham"></select>
            </div>
            <div class="form-group">
                 <input type="submit" value="Create" class="btn btn-primary w3-margin" />
                <a asp-action="Index" class="btn btn-primary w3-margin w3-button w3-khaki">Đánh giá của bạn</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
