@model IEnumerable<Nhom05.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
}

<h1 class="">Danh Sách Nhân Viên</h1>

<p>
    <a asp-action="Create" class="w3-button w3-teal w3-round ">Thêm Nhân Viên</a>
</p>
<table class="w3-table-all w3-card-4">
    <thead>
        <tr class="w3-blue">
            <th>
                @Html.DisplayNameFor(model => model.TenNhanVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tuoi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KinhNghiem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNhanVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tuoi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KinhNghiem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                <a class="w3-button w3-blue w3-round" asp-action="Edit" asp-route-id="@item.IDNhanVien">Edit</a> |
                <a class="w3-button w3-green w3-round" asp-action="Details" asp-route-id="@item.IDNhanVien">Details</a> |
                <a class="w3-button w3-red w3-round" asp-action="Delete" asp-route-id="@item.IDNhanVien">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
