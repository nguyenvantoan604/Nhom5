@model Nhom05.Models.NhanVien

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-4  w3-card-4">
          <h1 class="w3-container w3-green w3-margin w3-round">Thêm Nhân Viên</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IDNhanVien" class="control-label"></label>
                <input asp-for="IDNhanVien" class="form-control" value="@ViewBag.IDNhanVien" readonly/>
                <span asp-validation-for="IDNhanVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenNhanVien" class="control-label">Họ và Tên Nhân Viên</label>
                <input asp-for="TenNhanVien" class="form-control" />
                <span asp-validation-for="TenNhanVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tuoi" class="control-label">Tuổi</label>
                <input asp-for="Tuoi" class="form-control" />
                <span asp-validation-for="Tuoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KinhNghiem" class="control-label">Kinh Nghiệm</label>
                <input asp-for="KinhNghiem" class="form-control" />
                <span asp-validation-for="KinhNghiem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label">Địa Chỉ</label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
               <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary w3-margin" />
            </div>
            <div>
              <a asp-action="Index" class="w3-button w3-khaki w3-round  w3-margin-bottom">Danh Sách Nhân Viên</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
