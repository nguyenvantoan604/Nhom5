@model Nhom05.Models.NhanVien

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-4 w3-card-4 w3-round">
            <h3 class="w3-container w3-blue w3-round w3-padding-16">Sửa thông tin Nhân Viên</h3>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IDNhanVien" />
            <div class="form-group">
                <label asp-for="TenNhanVien" class="control-label"></label>
                <input asp-for="TenNhanVien" class="form-control" />
                <span asp-validation-for="TenNhanVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tuoi" class="control-label"></label>
                <input asp-for="Tuoi" class="form-control" />
                <span asp-validation-for="Tuoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KinhNghiem" class="control-label"></label>
                <input asp-for="KinhNghiem" class="form-control" />
                <span asp-validation-for="KinhNghiem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label"></label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
               <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary w3-margin" />
            </div>
                <div>
              <a asp-action="Index" class="w3-button w3-khaki w3-round w3-margin-bottom">Danh Sách Nhân Viên</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
