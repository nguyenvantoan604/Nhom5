@model Nhom05.Models.HoaDon

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4  w3-card-4 w3-round">
         <h3 class="w3-container w3-blue w3-round w3-padding-16">Sửa thông hóa đơn</h3>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IDHoaDon" />
            <div class="form-group">
                <label asp-for="IDKhachHang" class="control-label"></label>
                <select asp-for="IDKhachHang" class="form-control" asp-items="ViewBag.IDKhachHang"></select>
                <span asp-validation-for="IDKhachHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDSanPham" class="control-label"></label>
                <select asp-for="IDSanPham" class="form-control" asp-items="ViewBag.IDSanPham"></select>
                <span asp-validation-for="IDSanPham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label"></label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="STD" class="control-label"></label>
                <input asp-for="STD" class="form-control" />
                <span asp-validation-for="STD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TongGia" class="control-label"></label>
                <input asp-for="TongGia" class="form-control" />
                <span asp-validation-for="TongGia" class="text-danger"></span>
            </div>
               <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary w3-margin" />
            </div>
                <div>
              <a asp-action="Index" class="w3-button w3-khaki w3-round w3-margin-bottom">Danh Sách Hóa Đơn</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
