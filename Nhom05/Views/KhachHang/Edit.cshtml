@model Nhom05.Models.KhachHang

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-4 w3-card-4 w3-round">
          <h3 class="w3-container w3-blue w3-round w3-padding-16">Sửa thông tin đơn hàng</h3>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IDKhachHang" />
            <div class="form-group">
                <label asp-for="TenKhachHang" class="control-label">Tên Khách Hàng</label>
                <input asp-for="TenKhachHang" class="form-control" />
                <span asp-validation-for="TenKhachHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="STD" class="control-label">Số Điện Thoại</label>
                <input asp-for="STD" class="form-control" />
                <span asp-validation-for="STD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label">Địa Chỉ</label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDSanPham" class="control-label"> Sản Phẩm Mua</label>
                <select asp-for="IDSanPham" class="form-control" asp-items="ViewBag.IDSanPham"></select>
                <span asp-validation-for="IDSanPham" class="text-danger"></span>
            </div>
          <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary w3-margin" />
            </div>
                <div>
              <a asp-action="Index" class="w3-button w3-khaki w3-round w3-margin-bottom">Danh sách đơn hàng</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
