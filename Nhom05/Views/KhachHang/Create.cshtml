@model Nhom05.Models.KhachHang

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4  w3-card-4">
        <h2 class="w3-container w3-green w3-margin w3-round w3-padding w3-center">Mua Hàng</h2>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IDKhachHang" class="control-label"></label>
                <input asp-for="IDKhachHang" class="form-control" value="@ViewBag.IDKhachHang" readonly />
                <span asp-validation-for="IDKhachHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenKhachHang" class="control-label"> Họ và Tên</label>
                <input asp-for="TenKhachHang" class="form-control" />
                <span asp-validation-for="TenKhachHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="STD" class="control-label">Số điện thoại</label>
                <input asp-for="STD" class="form-control" />
                <span asp-validation-for="STD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label"> Địa chỉ</label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDSanPham" class="control-label"> Tên Sản Phẩm</label>
                <select asp-for="IDSanPham" class ="form-control" asp-items="ViewBag.IDSanPham"></select>
            </div>
                  <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary w3-margin" />
            </div>
            <div>
              <a asp-action="Index" class="w3-button w3-khaki w3-round  w3-margin-bottom">Danh Sách Sản phẩm đã mua</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
