@model Nhom05.Models.Kho

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-4   w3-card-4">
         <h1 class="w3-container w3-green w3-margin w3-round w3-center">Thêm mới Kho và Sản Phẩm</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KhoID" class="control-label"></label>
                <input asp-for="KhoID" class="form-control" />
                <span asp-validation-for="KhoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenKho" class="control-label">Tên Kho</label>
                <input asp-for="TenKho" class="form-control" />
                <span asp-validation-for="TenKho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenSanPham" class="control-label">Tên Sản Phẩm</label>
                <input asp-for="TenSanPham" class="form-control" />
                <span asp-validation-for="TenSanPham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThuongHieu" class="control-label">Thương Hiệu</label>
                <input asp-for="ThuongHieu" class="form-control" />
                <span asp-validation-for="ThuongHieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChiKho" class="control-label">Địa Chỉ Kho</label>
                <input asp-for="DiaChiKho" class="form-control" />
                <span asp-validation-for="DiaChiKho" class="text-danger"></span>
            </div>
                  <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary w3-margin" />
            </div>
            <div>
              <a asp-action="Index" class="w3-button w3-khaki w3-round  w3-margin-bottom">Danh Sách Kho và Sản Phẩm</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
